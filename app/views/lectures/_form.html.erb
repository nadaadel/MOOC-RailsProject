<%= form_with(model: lecture, local: true) do |form| %>
  <% if lecture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(lecture.errors.count, "error") %> prohibited this lecture from being saved:</h2>

      <ul>
      <% lecture.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :lecture_name %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content , id: :lecture_content, :class => 'ckeditor' %>
  </div>

  <div class="field">
    <%= form.label :attachment %>
    <%= form.file_field :attachment , autofocus: true, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= form.label :course_id %>
    <%= form.select :course_id ,  options_for_select(Course.all.map{|c|[c.title , c.id]})  %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
